    <script>
        // Global variables
        let currentVideo = null;
        let generatedThumbnails = [];
        let selectedSize = { width: 640, height: 360 };

        // Video processing functionality
        document.addEventListener('DOMContentLoaded', function() {
            setupDragAndDrop();
            setupSettingsHandlers();
        });

        function setupDragAndDrop() {
            const uploadArea = document.getElementById('uploadArea');
            const fileInput = document.getElementById('videoFile');

            // Drag and drop events
            uploadArea.addEventListener('dragover', (e) => {
                e.preventDefault();
                uploadArea.classList.add('drag-over');
            });

            uploadArea.addEventListener('dragleave', () => {
                uploadArea.classList.remove('drag-over');
            });

            uploadArea.addEventListener('drop', (e) => {
                e.preventDefault();
                uploadArea.classList.remove('drag-over');
                const files = e.dataTransfer.files;
                if (files.length > 0) {
                    handleVideoFile(files[0]);
                }
            });

            uploadArea.addEventListener('click', () => {
                fileInput.click();
            });

            fileInput.addEventListener('change', (e) => {
                if (e.target.files.length > 0) {
                    handleVideoFile(e.target.files[0]);
                }
            });
        }

        function setupSettingsHandlers() {
            // Position selection
            const positionInputs = document.querySelectorAll('input[name="capturePosition"]');
            positionInputs.forEach(input => {
                input.addEventListener('change', function() {
                    const customTimeInput = document.getElementById('customTimeInput');
                    if (this.value === 'custom') {
                        customTimeInput.style.display = 'block';
                    } else {
                        customTimeInput.style.display = 'none';
                    }
                });
            });

            // Size presets
            const sizeButtons = document.querySelectorAll('.size-btn');
            sizeButtons.forEach(button => {
                button.addEventListener('click', function() {
                    sizeButtons.forEach(btn => btn.classList.remove('active'));
                    this.classList.add('active');
                    
                    const customSizeInput = document.getElementById('customSizeInput');
                    if (this.dataset.size === 'custom') {
                        customSizeInput.style.display = 'block';
                    } else {
                        customSizeInput.style.display = 'none';
                        const [width, height] = this.dataset.size.split('x').map(Number);
                        selectedSize = { width, height };
                    }
                });
            });

            // Social media presets
            const socialButtons = document.querySelectorAll('.social-btn');
            socialButtons.forEach(button => {
                button.addEventListener('click', function() {
                    socialButtons.forEach(btn => btn.classList.remove('active'));
                    this.classList.add('active');
                    
                    const preset = this.dataset.preset;
                    applySocialMediaPreset(preset);
                });
            });
        }

        function handleVideoFile(file) {
            // Validate file
            if (!file.type.startsWith('video/')) {
                showError('Please select a valid video file.');
                return;
            }

            if (file.size > 100 * 1024 * 1024) { // 100MB limit
                showError('File size too large. Please select a video under 100MB.');
                return;
            }

            // Create video element
            const video = document.createElement('video');
            video.src = URL.createObjectURL(file);
            video.style.display = 'none';
            document.body.appendChild(video);

            video.addEventListener('loadedmetadata', function() {
                currentVideo = video;
                displayVideoInfo(file, video);
                showSettings();
            });

            video.addEventListener('error', function() {
                showError('Error loading video file. Please try a different format.');
            });
        }

        function displayVideoInfo(file, video) {
            const duration = formatTime(video.duration);
            const resolution = `${video.videoWidth}√ó${video.videoHeight}`;
            const fileSize = formatFileSize(file.size);
            const format = file.name.split('.').pop().toUpperCase();

            document.getElementById('videoDuration').textContent = duration;
            document.getElementById('videoResolution').textContent = resolution;
            document.getElementById('videoFileSize').textContent = fileSize;
            document.getElementById('videoFormat').textContent = format;
        }

        function showSettings() {
            document.getElementById('videoInfoSection').style.display = 'block';
            document.getElementById('settingsSection').style.display = 'block';
        }

        function formatTime(seconds) {
            const mins = Math.floor(seconds / 60);
            const secs = Math.floor(seconds % 60);
            return `${mins}:${secs.toString().padStart(2, '0')}`;
        }

        function formatFileSize(bytes) {
            if (bytes === 0) return '0 B';
            const k = 1024;
            const sizes = ['B', 'KB', 'MB', 'GB'];
            const i = Math.floor(Math.log(bytes) / Math.log(k));
            return parseFloat((bytes / Math.pow(k, i)).toFixed(2)) + ' ' + sizes[i];
        }

        function generateThumbnails() {
            if (!currentVideo) {
                showError('Please upload a video file first.');
                return;
            }

            const customWidth = document.getElementById('customWidth').value;
            const customHeight = document.getElementById('customHeight').value;
            
            if (document.querySelector('.size-btn.active').dataset.size === 'custom') {
                if (!customWidth || !customHeight) {
                    showError('Please enter custom width and height.');
                    return;
                }
                selectedSize = { width: parseInt(customWidth), height: parseInt(customHeight) };
            }

            showProgress();
            generatedThumbnails = [];

            const generateMultiple = document.getElementById('generateMultiple').checked;
            const thumbsCount = parseInt(document.getElementById('thumbsCount').value);
            const thumbnailsToGenerate = generateMultiple ? thumbsCount : 1;

            // Calculate timestamps
            const timestamps = generateTimestamps(currentVideo.duration, thumbnailsToGenerate);
            
            // Generate thumbnails sequentially
            let currentIndex = 0;
            function generateNext() {
                if (currentIndex >= timestamps.length) {
                    hideProgress();
                    showResults();
                    return;
                }

                const timestamp = timestamps[currentIndex];
                generateSingleThumbnail(timestamp, currentIndex).then(() => {
                    currentIndex++;
                    updateProgress((currentIndex / timestamps.length) * 100);
                    setTimeout(generateNext, 100); // Small delay to prevent UI blocking
                });
            }

            generateNext();
        }

        function generateTimestamps(duration, count) {
            if (count === 1) {
                // Single thumbnail at selected position
                const position = document.querySelector('input[name="capturePosition"]:checked').value;
                let timestamp = 0;
                
                switch (position) {
                    case 'start': timestamp = 0; break;
                    case 'middle': timestamp = duration / 2; break;
                    case 'end': timestamp = duration - 1; break;
                    case 'custom': 
                        const customTime = document.getElementById('customTime').value;
                        if (customTime) {
                            const [mm, ss] = customTime.split(':');
                            timestamp = (parseInt(mm) * 60) + parseInt(ss);
                        }
                        break;
                }
                return [Math.min(timestamp, duration - 1)];
            } else {
                // Multiple thumbnails at equal intervals
                const interval = duration / (count + 1);
                return Array.from({length: count}, (_, i) => (i + 1) * interval);
            }
        }

        function generateSingleThumbnail(timestamp, index) {
            return new Promise((resolve) => {
                const canvas = document.createElement('canvas');
                const ctx = canvas.getContext('2d');
                
                canvas.width = selectedSize.width;
                canvas.height = selectedSize.height;

                currentVideo.currentTime = timestamp;
                
                currentVideo.addEventListener('seeked', function() {
                    // Calculate scaling to maintain aspect ratio
                    const videoAspect = currentVideo.videoWidth / currentVideo.videoHeight;
                    const canvasAspect = selectedSize.width / selectedSize.height;
                    
                    let drawWidth, drawHeight, drawX, drawY;
                    
                    if (videoAspect > canvasAspect) {
                        // Video is wider - fit to height
                        drawHeight = selectedSize.height;
                        drawWidth = selectedSize.height * videoAspect;
                        drawX = (selectedSize.width - drawWidth) / 2;
                        drawY = 0;
                    } else {
                        // Video is taller - fit to width
                        drawWidth = selectedSize.width;
                        drawHeight = selectedSize.width / videoAspect;
                        drawX = 0;
                        drawY = (selectedSize.height - drawHeight) / 2;
                    }
                    
                    // Clear canvas and draw video frame
                    ctx.clearRect(0, 0, selectedSize.width, selectedSize.height);
                    ctx.drawImage(currentVideo, drawX, drawY, drawWidth, drawHeight);
                    
                    // Convert to blob and create download link
                    canvas.toBlob(function(blob) {
                        const url = URL.createObjectURL(blob);
                        const timestampStr = formatTime(timestamp).replace(':', '-');
                        
                        generatedThumbnails.push({
                            url: url,
                            blob: blob,
                            filename: `thumbnail_${timestampStr}_${selectedSize.width}x${selectedSize.height}.png`,
                            timestamp: timestamp,
                            index: index
                        });
                        
                        resolve();
                    }, 'image/png');
                }, { once: true });
            });
        }

        function showProgress() {
            document.getElementById('progressSection').style.display = 'block';
            document.getElementById('resultsSection').style.display = 'none';
            updateProgress(0);
        }

        function updateProgress(percentage) {
            const progressFill = document.getElementById('progressFill');
            const progressText = document.getElementById('progressText');
            
            progressFill.style.width = percentage + '%';
            progressText.textContent = Math.round(percentage) + '%';
        }

        function hideProgress() {
            document.getElementById('progressSection').style.display = 'none';
        }

        function showResults() {
            const grid = document.getElementById('thumbnailsGrid');
            const resultsSection = document.getElementById('resultsSection');
            const downloadAllBtn = document.getElementById('downloadAllBtn');
            
            grid.innerHTML = '';
            
            generatedThumbnails.forEach((thumb, index) => {
                const card = document.createElement('div');
                card.className = 'thumbnail-card';
                
                card.innerHTML = `
                    <div class="thumbnail-preview">
                        <img src="${thumb.url}" alt="Thumbnail ${index + 1}" loading="lazy">
                        <div class="thumbnail-overlay">
                            <button class="btn btn-small" onclick="downloadSingleThumbnail(${index})">
                                üì• Download
                            </button>
                        </div>
                    </div>
                    <div class="thumbnail-info">
                        <div class="thumbnail-time">‚è∞ ${formatTime(thumb.timestamp)}</div>
                        <div class="thumbnail-size">${selectedSize.width}√ó${selectedSize.height}</div>
                    </div>
                `;
                
                grid.appendChild(card);
            });
            
            resultsSection.style.display = 'block';
            downloadAllBtn.style.display = 'inline-block';
        }

        function downloadSingleThumbnail(index) {
            const thumb = generatedThumbnails[index];
            const link = document.createElement('a');
            link.href = thumb.url;
            link.download = thumb.filename;
            link.click();
        }

        function downloadAllThumbnails() {
            // Create a zip-like download experience (sequential downloads)
            generatedThumbnails.forEach((thumb, index) => {
                setTimeout(() => {
                    downloadSingleThumbnail(index);
                }, index * 200); // Stagger downloads
            });
            
            showNotification('üì¶ Download started! Check your downloads folder.');
        }

        function applySocialMediaPreset(preset) {
            const presets = {
                youtube: { width: 1280, height: 720 },
                instagram: { width: 1080, height: 1080 },
                twitter: { width: 1200, height: 675 },
                facebook: { width: 1200, height: 630 }
            };
            
            if (presets[preset]) {
                selectedSize = presets[preset];
                // Update size buttons to show selection
                document.querySelectorAll('.size-btn').forEach(btn => btn.classList.remove('active'));
                document.getElementById('customWidth').value = selectedSize.width;
                document.getElementById('customHeight').value = selectedSize.height;
            }
        }

        function showError(message) {
            showNotification('‚ùå ' + message, 'error');
        }

        function showNotification(message, type = 'success') {
            const notification = document.createElement('div');
            notification.className = 'notification';
            notification.textContent = message;
            notification.style.cssText = `
                position: fixed;
                top: 20px;
                right: 20px;
                background: ${type === 'error' ? '#EF4444' : '#10B981'};
                color: white;
                padding: 12px 20px;
                border-radius: 12px;
                font-weight: 500;
                z-index: 10000;
                animation: slideIn 0.3s ease-out;
                max-width: 300px;
            `;
            
            document.body.appendChild(notification);
            
            setTimeout(() => {
                notification.style.animation = 'slideOut 0.3s ease-in';
                setTimeout(() => {
                    document.body.removeChild(notification);
                }, 300);
            }, 4000);
        }

        // Mobile menu functionality
        const menuToggle = document.querySelector('.menu-toggle');
        const navLinks = document.querySelector('.nav-links');
        
        menuToggle.addEventListener('click', () => {
            const isExpanded = menuToggle.getAttribute('aria-expanded') === 'true';
            menuToggle.setAttribute('aria-expanded', !isExpanded);
            navLinks.classList.toggle('active');
        });

        // Add CSS animations for notifications
        const style = document.createElement('style');
        style.textContent = `
            @keyframes slideIn {
                from {
                    transform: translateX(100%);
                    opacity: 0;
                }
                to {
                    transform: translateX(0);
                    opacity: 1;
                }
            }
            
            @keyframes slideOut {
                from {
                    transform: translateX(0);
                    opacity: 1;
                }
                to {
                    transform: translateX(100%);
                    opacity: 0;
                }
            }
        `;
        document.head.appendChild(style);
    </script>

