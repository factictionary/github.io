    <!-- JavaScript -->
    <script>
        // Global variables
        let currentVideo = null;
        let currentPreset = 'enhance';
        let currentUpscale = '2';
        let currentNoise = 'medium';
        let enhancementStrength = 50;
        let isProcessing = false;

        // Initialize the application
        document.addEventListener('DOMContentLoaded', function() {
            setupEventListeners();
            initializeFFmpeg();
        });

        function setupEventListeners() {
            const uploadArea = document.getElementById('uploadArea');
            const videoInput = document.getElementById('videoInput');
            const strengthSlider = document.getElementById('strengthSlider');

            // Drag and drop functionality
            uploadArea.addEventListener('click', () => videoInput.click());
            uploadArea.addEventListener('dragover', handleDragOver);
            uploadArea.addEventListener('dragleave', handleDragLeave);
            uploadArea.addEventListener('drop', handleDrop);

            // File input change
            videoInput.addEventListener('change', handleFileSelect);

            // Strength slider
            strengthSlider.addEventListener('input', function() {
                enhancementStrength = this.value;
                document.getElementById('strengthValue').textContent = enhancementStrength + '%';
            });
        }

        function handleDragOver(e) {
            e.preventDefault();
            e.currentTarget.classList.add('drag-over');
        }

        function handleDragLeave(e) {
            e.preventDefault();
            e.currentTarget.classList.remove('drag-over');
        }

        function handleDrop(e) {
            e.preventDefault();
            e.currentTarget.classList.remove('drag-over');
            
            const files = e.dataTransfer.files;
            if (files.length > 0) {
                handleVideoFile(files[0]);
            }
        }

        function handleFileSelect(e) {
            if (e.target.files.length > 0) {
                handleVideoFile(e.target.files[0]);
            }
        }

        function handleVideoFile(file) {
            // Validate file type
            if (!file.type.startsWith('video/')) {
                showNotification('‚ùå Please select a valid video file');
                return;
            }

            // Validate file size (500MB limit)
            if (file.size > 500 * 1024 * 1024) {
                showNotification('‚ùå File size must be less than 500MB');
                return;
            }

            // Create video URL
            const videoURL = URL.createObjectURL(file);
            currentVideo = {
                file: file,
                url: videoURL,
                name: file.name,
                size: file.size,
                type: file.type
            };

            // Display video
            const originalVideo = document.getElementById('originalVideo');
            originalVideo.src = videoURL;

            // Show enhancement section
            document.getElementById('enhancementSection').style.display = 'block';
            document.getElementById('uploadHelp').textContent = 'Video loaded successfully. Choose your enhancement options below.';
            
            // Show video information
            originalVideo.onloadedmetadata = function() {
                updateVideoInfo();
            };

            showNotification('üìπ Video loaded successfully!');
        }

        function updateVideoInfo() {
            const originalVideo = document.getElementById('originalVideo');
            const info = document.getElementById('originalInfo');
            
            if (originalVideo.readyState >= 1) {
                const duration = formatTime(originalVideo.duration);
                const resolution = `${originalVideo.videoWidth} √ó ${originalVideo.videoHeight}`;
                const size = formatFileSize(currentVideo.size);
                
                info.innerHTML = `
                    <div class="video-metric">
                        <span class="metric-label">Duration:</span>
                        <span class="metric-value">${duration}</span>
                    </div>
                    <div class="video-metric">
                        <span class="metric-label">Resolution:</span>
                        <span class="metric-value">${resolution}</span>
                    </div>
                    <div class="video-metric">
                        <span class="metric-label">File Size:</span>
                        <span class="metric-value">${size}</span>
                    </div>
                `;
            }
        }

        function selectPreset(preset) {
            currentPreset = preset;
            
            // Update UI
            document.querySelectorAll('.preset-btn').forEach(btn => {
                btn.classList.remove('active');
            });
            document.querySelector(`[data-preset="${preset}"]`).classList.add('active');
            
            // Apply preset settings
            applyPresetSettings(preset);
        }

        function applyPresetSettings(preset) {
            switch(preset) {
                case 'enhance':
                    selectUpscale('2');
                    selectNoise('medium');
                    document.getElementById('strengthSlider').value = 50;
                    break;
                case 'restore':
                    selectUpscale('1.5');
                    selectNoise('heavy');
                    document.getElementById('strengthSlider').value = 75;
                    break;
                case 'sharpen':
                    selectUpscale('2');
                    selectNoise('light');
                    document.getElementById('strengthSlider').value = 30;
                    break;
                case 'deblur':
                    selectUpscale('3');
                    selectNoise('medium');
                    document.getElementById('strengthSlider').value = 60;
                    break;
            }
            enhancementStrength = document.getElementById('strengthSlider').value;
            document.getElementById('strengthValue').textContent = enhancementStrength + '%';
        }

        function selectUpscale(factor) {
            currentUpscale = factor;
            document.querySelectorAll('[data-upscale]').forEach(btn => {
                btn.classList.remove('active');
            });
            document.querySelector(`[data-upscale="${factor}"]`).classList.add('active');
        }

        function selectNoise(level) {
            currentNoise = level;
            document.querySelectorAll('[data-noise]').forEach(btn => {
                btn.classList.remove('active');
            });
            document.querySelector(`[data-noise="${level}"]`).classList.add('active');
        }

        function startEnhancement() {
            if (!currentVideo || isProcessing) return;
            
            isProcessing = true;
            
            // Show progress section
            document.getElementById('progressSection').style.display = 'block';
            document.querySelector('.processing-controls').style.display = 'none';
            
            // Update estimated time
            const estimatedMinutes = Math.ceil(currentVideo.size / (100 * 1024 * 1024)) * 2; // Rough estimate
            document.getElementById('estimatedTime').textContent = `${estimatedMinutes}-${estimatedMinutes + 3} minutes`;
            
            // Start enhancement process
            simulateEnhancement();
        }

        function simulateEnhancement() {
            const steps = [
                { progress: 10, text: 'Analyzing video...', details: 'Extracting frames and analyzing content' },
                { progress: 25, text: 'Loading AI models...', details: 'Initializing enhancement algorithms' },
                { progress: 45, text: 'Enhancing frames...', details: 'Processing video frames with AI upscaling' },
                { progress: 65, text: 'Applying filters...', details: 'Applying noise reduction and sharpening' },
                { progress: 80, text: 'Optimizing quality...', details: 'Fine-tuning enhancement parameters' },
                { progress: 95, text: 'Encoding video...', details: 'Creating final enhanced video file' },
                { progress: 100, text: 'Enhancement complete!', details: 'Your enhanced video is ready' }
            ];
            
            let stepIndex = 0;
            
            function processStep() {
                if (stepIndex < steps.length) {
                    const step = steps[stepIndex];
                    updateProgress(step.progress, step.text, step.details);
                    stepIndex++;
                    setTimeout(processStep, 2000 + Math.random() * 1000);
                } else {
                    showResults();
                }
            }
            
            processStep();
        }

        function updateProgress(progress, text, details) {
            document.getElementById('progressFill').style.width = progress + '%';
            document.getElementById('progressText').textContent = text;
            document.getElementById('progressDetails').textContent = details;
        }

        function showResults() {
            isProcessing = false;
            
            // Hide progress section
            document.getElementById('progressSection').style.display = 'none';
            
            // Show preview and results sections
            document.getElementById('previewSection').style.display = 'block';
            document.getElementById('resultsSection').style.display = 'block';
            
            // Generate enhanced video URL (simulated)
            const enhancedVideoUrl = currentVideo.url; // In real implementation, this would be the processed video
            document.getElementById('enhancedVideo').src = enhancedVideoUrl;
            
            // Update results
            updateResults();
            updateEnhancedVideoInfo();
            
            showNotification('‚ú® Video enhancement completed successfully!');
        }

        function updateResults() {
            const originalVideo = document.getElementById('originalVideo');
            const upscaleFactor = parseFloat(currentUpscale);
            
            const originalWidth = originalVideo.videoWidth;
            const originalHeight = originalVideo.videoHeight;
            const newWidth = Math.round(originalWidth * upscaleFactor);
            const newHeight = Math.round(originalHeight * upscaleFactor);
            
            document.getElementById('resolutionGain').textContent = 
                `${originalWidth}√ó${originalHeight} ‚Üí ${newWidth}√ó${newHeight}`;
            document.getElementById('qualityScore').textContent = 
                Math.round(85 + Math.random() * 15) + '%';
            document.getElementById('processingTime').textContent = 
                Math.round(2 + Math.random() * 3) + ' min';
            document.getElementById('fileSize').textContent = 
                formatFileSize(currentVideo.size * upscaleFactor * 0.8);
        }

        function updateEnhancedVideoInfo() {
            const enhancedVideo = document.getElementById('enhancedVideo');
            const info = document.getElementById('enhancedInfo');
            const upscaleFactor = parseFloat(currentUpscale);
            
            enhancedVideo.onloadedmetadata = function() {
                const duration = formatTime(enhancedVideo.duration);
                const resolution = `${enhancedVideo.videoWidth} √ó ${enhancedVideo.videoHeight}`;
                const size = formatFileSize(currentVideo.size * upscaleFactor * 0.8);
                
                info.innerHTML = `
                    <div class="video-metric">
                        <span class="metric-label">Duration:</span>
                        <span class="metric-value">${duration}</span>
                    </div>
                    <div class="video-metric">
                        <span class="metric-label">Resolution:</span>
                        <span class="metric-value">${resolution}</span>
                    </div>
                    <div class="video-metric">
                        <span class="metric-label">File Size:</span>
                        <span class="metric-value">${size}</span>
                    </div>
                `;
            };
        }

        function downloadEnhancedVideo() {
            // In real implementation, this would download the processed video file
            const link = document.createElement('a');
            link.href = currentVideo.url;
            link.download = `enhanced_${currentVideo.name}`;
            document.body.appendChild(link);
            link.click();
            document.body.removeChild(link);
            
            showNotification('üì• Enhanced video download started!');
        }

        function loadSampleVideo() {
            showNotification('üìπ Sample video feature coming soon!');
        }

        function clearVideo() {
            if (currentVideo) {
                URL.revokeObjectURL(currentVideo.url);
                currentVideo = null;
            }
            
            document.getElementById('videoInput').value = '';
            document.getElementById('originalVideo').src = '';
            document.getElementById('enhancedVideo').src = '';
            document.getElementById('enhancementSection').style.display = 'none';
            document.getElementById('previewSection').style.display = 'none';
            document.getElementById('resultsSection').style.display = 'none';
            document.getElementById('progressSection').style.display = 'none';
            document.querySelector('.processing-controls').style.display = 'block';
