                    const customY = document.getElementById('customY').value;
                    overlay.style.left = customX + '%';
                    overlay.style.top = customY + '%';
                    overlay.style.transform = 'translate(-50%, -50%)';
                    overlay.style.right = 'auto';
                    overlay.style.bottom = 'auto';
            }
